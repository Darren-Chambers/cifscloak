[Unit]
After=multi-user.target
Description=cifscloak cifs share mount operation

[Service]
Type=oneshot
RemainAfterExit=yes

# Command to execute when the service is started
ExecStart=/usr/bin/env python3 /usr/bin/cifscloak.py mount -a films games

# Command to execute when the service is stopped
ExecStop=/usr/bin/env python3 /usr/bin/cifscloak.py mount -u -a films games

[Install]
WantedBy=multi-user.target
